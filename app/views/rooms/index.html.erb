<div id="room-id" data-room-id="<%= @room.try(:id)%>"></div>
<div id="user-id" data-user-id="<%= current_user.id%>"></div>
<p id="notice"><%= notice %></p>
<link href="https://bootswatch.com/5/solar/bootstrap.min.css" rel ="stylesheet" type="text/css">
<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      
        <%= render 'form', room: Room.new %>
        <hr>
        <% @rooms.each do |room| %>
        <% for user in current_user.inverse_friends %>
           
  
            <% if user.id == room.user_id or current_user.id%>

         <%= link_to room do %>
            <div class="card mb-2">
              <div class="card-body">
               <%= room.name%>
               

        <%end%>
               
               
               

              </div>
            </div>
        <%end%>
        
          <%end%>
       <%end %>

    </div>
    <div class="col-9">
     
      <% if @room.present?%>
      
      
     
        <div class= "chat-room">
          <p> <%= @room.name%> RoomMaster Id: <%= @room.user_id%> </p> 
          <% if @room.user_id == current_user.id%>
           <%= button_to 'Destroy', @room, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
          <%end%>
          <p>


            
          </p>
          <div id="messages">
            <% @room.messages.each do |message|%>

              <%= render 'messages/message', message: message%>
          
        
            
            <%end%>
          </div>   


          <div class="chat-box">

            <%=render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
        
      <%end%>

    </div>
  </div>
</div>

